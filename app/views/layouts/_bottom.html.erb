<div class="header-bottom">
  <div class="container">
    <div class="row">
      <div class="col-sm-9">
        <div class="mainmenu pull-left">
          <ul class="nav navbar-nav collapse navbar-collapse">
            <li><%= link_to t("header.text.home"), root_path, class:"active" %></li>
            <li class="dropdown"> 
              <%= link_to "#" do %>
                <%= t "header.text.shop" %> <i class="fa fa-angle-down"></i>
              <% end %>
              <ul role="menu" class="sub-menu">
                <li><%= link_to t("header.text.products"), "#" %></li>
                <li><%= link_to t("header.text.checkout"), "#" %></li>
                <li><%= link_to t("header.text.cart"), "#" %></li>
                <li><%= link_to t("header.text.login"), "#" %></li>
              </ul>
            </li>
            <li class="dropdown"> <%= link_to "#" do %>
                                    <%= t "header.text.blog" %> <i class="fa fa-angle-down"></i>
                                  <% end %>
              <ul role="menu" class="sub-menu">
                <li><%= link_to t("header.text.list_blog"), "#" %></li>
                <li><%= link_to t("header.text.single_blog"), "#" %></li>
              </ul>
            </li>
            <li><%= link_to t("header.text.not_found"), "#" %></li>
            <li><%= link_to t("header.text.contact"), "#" %></li>
          </ul>
        </div>
      </div>
      <div class="col-sm-3">
        <div class="search_box pull-right">
          <%= form_tag search_index_path, method: :get do %>
          <%= text_field_tag :form_search, params[:name], autocomplete: :off,
            placeholder: t("header.text.search") %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
